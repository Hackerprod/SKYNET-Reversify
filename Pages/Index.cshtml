@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<!-- Animated Background -->
<div class="bg-animated" id="bgAnimated"></div>

<!-- Hero Section (adaptado de design.htm) -->
<section id="home" class="min-h-screen flex items-center justify-center pt-20 px-4 relative overflow-hidden">
    <div class="max-w-7xl mx-auto text-center z-10">
        <div class="fade-in">
            <div class="inline-block mb-6">
                <span class="glass px-6 py-2 rounded-full text-sm font-medium text-cyan-400">
                    <i class="fas fa-rocket mr-2"></i>SKYNET
                </span>
            </div>
            <h1 class="font-space text-5xl md:text-7xl lg:text-8xl font-bold mb-6 leading-tight">
                INTERNAL NETWORK
                <span class="gradient-text block typing-text" id="typingText">SKYNET</span>
            </h1>
        </div>
    </div>
    </section>

<!-- short placeholder for contact anchor so links work -->
<section id="contact" style="padding:40px 16px;">
    <div class="max-w-4xl mx-auto text-center text-gray-300">
        <h2>Contacto</h2>
        <p>Usa el formulario de contacto más abajo (esta es una muestra del diseño aplicado).</p>
    </div>
</section>
