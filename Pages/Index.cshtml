@page
@model IndexModel
@{
    ViewData["Title"] = "Acceso";
}

<div class="bg-animated" id="bgAnimated"></div>

<section class="min-h-screen flex items-center justify-center pt-24 px-4 pb-16 relative">
    <div class="w-full max-w-md">
        <div class="glass-strong rounded-3xl p-8 glow">
            <div class="text-center mb-8">
                <div class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-cyan-400 to-purple-600 flex items-center justify-center">
                    <i class="fas fa-shield-alt text-white text-2xl"></i>
                </div>
                <h1 class="font-space text-3xl font-bold gradient-text">Acceso</h1>
                <p class="text-gray-400 mt-2">Inicia sesión para entrar al Dashboard</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="mb-4 p-3 rounded-xl bg-red-500/10 border border-red-500/30 text-red-300 text-sm">
                    <i class="fas fa-exclamation-circle mr-2"></i>@Model.ErrorMessage
                </div>
            }

            <form method="post" asp-page="/Index" class="space-y-4">
                @Html.AntiForgeryToken()
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2" for="Username">
                        <i class="fas fa-user mr-2 text-cyan-400"></i>Usuario
                    </label>
                    <input asp-for="Username"
                           class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl focus:outline-none focus:border-cyan-400 transition-colors text-white"
                           placeholder="admin"
                           autocomplete="username"
                           required />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2" for="Password">
                        <i class="fas fa-key mr-2 text-cyan-400"></i>Contraseña
                    </label>
                    <input asp-for="Password"
                           type="password"
                           class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl focus:outline-none focus:border-cyan-400 transition-colors text-white"
                           placeholder="••••••••"
                           autocomplete="current-password"
                           required />
                </div>

                <button type="submit" class="btn-primary w-full px-6 py-3 rounded-full text-white font-semibold">
                    <i class="fas fa-sign-in-alt mr-2"></i>Entrar
                </button>
            </form>

            <div class="mt-6 text-xs text-gray-500 text-center">
                Credenciales configuradas en <code class="text-gray-300">appsettings.json</code>
            </div>
        </div>
    </div>
</section>
